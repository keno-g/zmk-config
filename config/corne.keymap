                        };

                        combo_caps_word {
                                timeout-ms = <20>;
                                key-positions = <2 3 4>;
                                bindings = <&caps_word>;                      
                        };

                        // workaround as default &kp C_AL_LOCK function does not work in Windows
                        combo_lock_computer {
                                timeout-ms = <30>;
                                key-positions = <8 9 10>;
                                bindings = <&kp LG(L)>;                      
